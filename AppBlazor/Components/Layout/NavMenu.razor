@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CookingBros</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/auth/login">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/auth/register">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Register
            </NavLink>
        </div>

        <li class="nav-item px-3 mt-3">
            <div class="d-flex gap-1">
                <a class="btn btn-outline-secondary btn-sm"
                   href="@GetCultureUrl("es")">
                    🇪🇸 ES
                </a>

                <a class="btn btn-outline-secondary btn-sm"
                   href="@GetCultureUrl("en")">
                    🇺🇸 EN
                </a>
            </div>
        </li>
    </nav>
</div>

@code {
    string GetCultureUrl(string culture)
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);

        if (string.IsNullOrEmpty(currentPath))
            currentPath = "/";
        else
            currentPath = "/" + currentPath;

        return $"/set-culture?culture={culture}&redirectUri={Uri.EscapeDataString(currentPath)}";
    }
}
